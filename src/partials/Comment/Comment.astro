---
import Giscus from './Giscus';
import type { GiscusConfig } from './Giscus';

export interface GiscusCommentConfig {
  provider: 'giscus';
  options: GiscusConfig;
}

export type CommentConfig = GiscusCommentConfig | false;

export interface CommentProps {
  config: CommentConfig;
}

export type Props = CommentProps;
const {
  config
} = Astro.props;
---
{config && (
  <>
    {config.provider === 'giscus' && <Giscus {...config.options} client:only="react" />}
  </>
)}
